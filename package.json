{
  "name": "copilot-rules-injector",
  "displayName": "Copilot Rules Injector",
  "description": "Estensione VS Code per inserire regole Copilot predefinite in markdown nei nuovi progetti",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:copilot-rules-injector.createCopilotRules",
    "onCommand:copilot-rules-injector.createStandardCopilotRules",
    "onCommand:copilot-rules-injector.helloWorld"
  ],
  "main": "./dist/extension.js",
  "icon": "icon.svg",
  "contributes": {
    "commands": [
      {
        "command": "copilot-rules-injector.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "copilot-rules-injector.createCopilotRules",
        "title": "Crea/aggiorna Copilot Rules (Markdown)"
      },
      {
        "command": "copilot-rules-injector.createStandardCopilotRules",
        "title": "Crea Copilot Rules Standard (Best Practice)"
      },
      {
        "command": "copilot-rules-injector.toggleMemoryRule",
        "title": "Seleziona/Deseleziona regola memoria"
      },
      {
        "command": "copilot-rules-injector.enableMemoryRules",
        "title": "Abilita regole della memoria"
      },
      {
        "command": "copilot-rules-injector.createMemoryFiles",
        "title": "Crea/aggiorna README.md e STATUS.md"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "copilotRulesActivityBar",
          "title": "Copilot Rules",
          "icon": "icon.svg"
        }
      ]
    },
    "views": {
      "copilotRulesActivityBar": [
        {
          "id": "copilotRulesView",
          "name": "Copilot Rules"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "ts-loader": "^9.5.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
